
<%= render @inbox %>
<div>
  <%= link_to "Edit", edit_inbox_path(@inbox) if policy(@inbox).edit?  %> 
  <%= link_to "Back to inboxes", inboxes_path %>

  <%= button_to "Destroy", @inbox, method: :delete if policy(@inbox).destroy? %>
</div>

<hr>

<h1>
  Messages
  <%= @inbox.messages_count%>

</h1>
<%= link_to "New message",  new_inbox_message_path(@inbox)%>
<%= render partial: 'inboxes/messages/message', collection: @inbox.messages%>


